<% if ( (is_post()) ) { %>
    <%- fragment_cache('head_prettify_css', () => {
        let html = '';
        if (theme.vendors.prettify_theme) {
            html += css_async(url_for(theme.vendors.prettify_theme));
        } else if (theme.prettify.theme) {
            html += css_async(url_for('lib/prettify/themes/' + theme.prettify.theme + '.min.css'));
        }

        html += `<style>
        pre.prettyprint {
            padding: 4px 0 0 2px !important;
        }

        pre.prettyprint ol,
        pre.prettyprint ul {
            padding-left: 42px;
        }

        pre.prettyprint ol li {
            background: transparent;
        }

        .prettyprint li.L0,
        .prettyprint li.L1,
        .prettyprint li.L2,
        .prettyprint li.L3,
        .prettyprint li.L4,
        .prettyprint li.L5,
        .prettyprint li.L6,
        .prettyprint li.L7,
        .prettyprint li.L8,
        .prettyprint li.L9 {`;

        if (theme.prettify.linenumber) {
            html += 'list-style-type: decimal !important;';
        } else {
            html += 'list-style-type: none !important;';
        }

        html += `
        }
        </style>`;

        return html;
    }) %>
<% } %>
